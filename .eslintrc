{
  "extends": [
    "react-app",
    "plugin:prettier/recommended",
    "prettier/react",
    "prettier/standard",
    "plugin:jsx-a11y/recommended"
  ],
  "plugins": ["jsx-a11y", "prettier", "import"],
  "settings": {
    "import/resolver": {
      "node": {
        "moduleDirectory": ["node_modules", "./src"]
      }
    }
  },
  "rules": {
    "prettier/prettier": ["error", { "singleQuote": true }],
    "array-bracket-spacing": ["error", "never"],
    "semi": ["error", "always"]
  }
}
